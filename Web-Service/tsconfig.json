{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "pretty": true,
        "sourceMap": true,
        "target": "es6",
        "outDir": "./dist",
        "baseUrl": "./src"
    },
    // which kind of files to compile
    "include": ["src/**/*.ts"],
    // which files or directories to ignore
    "exclude": ["node_modules"]
}
